@model tourism.Models.Rate

@{
    ViewBag.Title = "Create";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-center">
        <div class="container">

            <h2 style="text-align:center;color:white">إنشاء محافظة جديدة <span class="fa fa-bookmark"></span></h2>

        </div>
    </section>
</div>
<br />

<div style="margin-left:10%;margin-right:10%">

    @using (Html.BeginForm("Create", "Rates", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div style="margin-left:50%;">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Gov_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gov_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gov_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gov_Discription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Gov_Discription, 10, 40, htmlAttributes: new { style = "width:100%; max-width:100%" })
                    @Html.ValidationMessageFor(model => model.Gov_Discription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gov_Video, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gov_Video, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gov_Video, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gov_Background, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gov_Background, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gov_Background, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gov_Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input id="R_Image1" title="Upload images" type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.Gov_Image, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
