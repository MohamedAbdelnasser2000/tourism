@model IEnumerable<tourism.Models.Rate>

@{
    ViewBag.Title = "Index";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>
<br />

<div class="btn btn-style btn-light mt-sm-3" href="about.html" style="color:white;text-align:center">
    @Html.ActionLink("إضافة دورات جديدة", "Create")<i class="fa fa-arrow-right ml-2" aria-hidden="true"></i>
</div>




<div class="w3l-homeblog py-5" id="homeblog">
    <div class="container py-lg-5 py-md-4">
        <div class="header-title mb-3">
            <span class="sub-title">استكشف بنفسك</span>
            <h3 class="hny-title text-right">اهم المحافظات السياحية</h3>
        </div>
        <div class="row top-pics ">

            @foreach (var item in Model)
            {

                <div class="col-lg-3 col-md-6 mt-5">
                    <div class="top-@Html.DisplayFor(modelItem => item.Gov_Background)">
                        <div class="card-body blog-details">
                            <div class="blog-desc text-right">

                                <span><b style="color:white">  استكشف بنفسك  </b></span><span class="fa fa-search" style="color:white"></span>
                                <br />

                            </div>
                            <br />  <br />  <br />  <br />
                            <div class="header-title mb-3 text-center">
                                <a href="@Url.Action("Details",  new { id = item.R_Id })"> <h1 style="color:white"> @Html.DisplayFor(modelItem => item.Gov_Name)</h1>  </a>
                            </div>
                            <div class="blog-desc text-center">
                                <br />

                                <a href="@Url.Action("Edit",  new { id = item.R_Id })"    class="btn btn-primary" > <b style="color:white">تعديل </b>  </a>
                                <a href="@Url.Action("Delete",  new { id = item.R_Id } )" class="btn btn-primary" > <b style="color: white">  مسح</b>  </a>


                            </div>

                        </div>
                    </div>
                </div>
            }
            <br />
            <div class="readhny-btm text-center mx-auto mt-md-4">
                <a class="btn btn-primary btn-style mt-md-5 mt-4" href="about.html">
                    Read More <span class="fa fa-chevron-right ml-2" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
</div>













