@model tourism.Models.Rate

@{
    ViewBag.Title = "Details";
}

<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>
<br />
<h1 class="text-xl-center">
    @Html.DisplayFor(model => model.Gov_Name)

</h1>

<!-- about page about section -->

<section class="w3l-index3" id="about1">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-6 mb-lg-0 mb-md-5 mb-4">

                    @if (!string.IsNullOrWhiteSpace(Model.Gov_Image))
                    {
                        <img class="radius-image-full img-fluid"
                             src="~/Content/Image/For_Reser/@Url.Content(Model.Gov_Image)"
                             height="300"
                             alt="" />
                    }

                </div>
                <div class="col-lg-6 pl-lg-5 ">
                    <div class="header-title">
                        <span class="sub-title">استمتع طول فترة اقامتك</span>
                        <h3 class="hny-title text-center">معلومات عن اهم المعالم في المحافظة</h3>
                    </div>

                    <p class="mt-3">
                        @Html.DisplayFor(model => model.Gov_Discription)
                    </p>

                </div>
            </div>
        </div>
    </div>
</section>


<section class="w3l-blogpost-content w3l-courses py-5">
    <div class="container py-md-5">



        <div class="row">


            @foreach (var item in Model.Hotels)
            {

                <div class="col-lg-4 col-md-6 item">
                    <div class="card">
                        <div class="card-header p-0 position-relative">

                            <a href="#">
                                @if (!string.IsNullOrWhiteSpace(item.H_Image))
                                {
                                    <img class="card-img-bottom d-block radius-image-full"
                                         src="~/Content/Image/For_Reser/@Url.Content(item.H_Image)"
                                         height="300"
                                         alt="Card image cap" />
                                }

                            </a>
                        </div>
                        <div class="card-body blog-details" style="text-align:center">
                            <a href="#" class="blog-desc mt-2">
                                <span class="fa fa-building"></span>   @Html.DisplayFor(modelItem => item.H_Name)
                            </a>
                            <br />



                            <p>
                                @Html.DisplayFor(modelItem => item.Performance)
                            </p>
                            @for (int i = 0; i < (int)item.rating; i++)
                            {
                                <img src="~/Content/assets/images/19173807891555590645-128.png" width="20" height="20" />

                            }
                            <br />
                            <br />
                            <div class="course-meta ">


                                <a class="grid-link btn btn-primary " href="@Url.Action( "Details","Hotels", new { id = item.Id })">
                                    التفاصيل
                                </a>

                            </div>

                            <br />
                            @*<div class="grid-link btn btn-info">

                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </div>*@

                        </div>
                    </div>
                    <br />
                </div>

                <br />
            }
        </div>
    </div>
</section>

