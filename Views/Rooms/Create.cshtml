@model tourism.Models.Room

@{
    ViewBag.Title = "Create";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>
<br />
<h2 style="text-align:center">انشاء غرفة جديدة</h2>
<br />
<hr />

<div style="margin-left:10%;margin-right:10%">

    @using (Html.BeginForm("Create", "Rooms", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div style="margin-left:50%;">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    نوع الغرفة
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.R_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.R_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    الوصف
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.R_Description,10,50, htmlAttributes : new { style = "width:100%; max-width:100%" })
                        @Html.ValidationMessageFor(model => model.R_Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    سعر الليلة
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.R_Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.R_Price, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    عدد السرر
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Number_Of_Beds, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Number_Of_Beds, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    عدد اتساعها للاشخاص
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.R_Breadth, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.R_Breadth, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    رفع صورة1
                    <div class="col-md-10">
                        <input id="R_Image1" title="Upload images" type="file" name="file" />
                        @Html.ValidationMessageFor(model => model.R_Image1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    2رفع صورة
                    <div class="col-md-10">
                        <input id="R_Image2" title="Upload images" type="file" name="file2" />
                        @Html.ValidationMessageFor(model => model.R_Image2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    3رفع صورة
                    <div class="col-md-10">
                        <input id="R_Image3" title="Upload images" type="file" name="file3" />
                        @Html.ValidationMessageFor(model => model.R_Image3, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    4رفع صورة
                    <div class="col-md-10">
                        <input id="R_Image4" title="Upload images" type="file" name="file4" />
                        @Html.ValidationMessageFor(model => model.R_Image4, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    رفع موقع
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.R_Image5, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.R_Image5, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    رفع فديو
                    <div class="col-md-10">
                        <input id="R_Image6"  type="file" name="file6" />
                        @Html.ValidationMessageFor(model => model.R_Image6, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    اسم الفندق
                    <div class="col-md-10">
                        @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
