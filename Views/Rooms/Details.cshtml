@model tourism.Models.Room

@{
    ViewBag.Title = "Details";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>
<br />





<section class="team py-5" id="team">
    <div class="container py-md-3">
        <div class="w3-head-all mb-3">

        </div>
        <div class="row text-center">
            <div class=" col-md-3 col-sm-6 col-6 mb-md-0 mb-5 profile">
                <div class="img-box">

                    @if (!string.IsNullOrWhiteSpace(Model.R_Image1))
                    {
                        <img class="img-fluid"
                             src="~/Content/Image/For_Reser/@Html.DisplayFor(model => model.R_Image1)"
                             alt="" />
                    }
                    @*<img src="~/Content/assets/images/team1.jpg" alt="" class="img-fluid" />*@
                </div>

            </div>
            <div class="col-md-3 col-sm-6 col-6 mb-md-0 mb-5  profile">
                <div class="img-box">

                    @if (!string.IsNullOrWhiteSpace(Model.R_Image1))
                    {
                        <img class="img-fluid"
                             src="~/Content/Image/For_Reser/@Html.DisplayFor(model => model.R_Image2)"
                             alt="" />
                    }
                </div>

            </div>
            <div class="col-md-3 col-sm-6 col-6 profile">
                <div class="img-box">

                    @if (!string.IsNullOrWhiteSpace(Model.R_Image1))
                    {
                        <img class="img-fluid"
                             src="~/Content/Image/For_Reser/@Html.DisplayFor(model => model.R_Image3)"
                             alt="" />
                    }
                </div>

            </div>
            <div class="col-md-3 col-sm-6 col-6 profile">
                <div class="img-box">

                    @if (!string.IsNullOrWhiteSpace(Model.R_Image1))
                    {
                        <img class="img-fluid"
                             src="~/Content/Image/For_Reser/@Html.DisplayFor(model => model.R_Image4)"
                             alt="" />
                    }
                </div>

            </div>
        </div>
    </div>
</section>


<div style="text-align:center">

    <a class="btn btn-primary btn-style mt-4" href="@Url.Action( "Create", "Bookings")">لتاكيد الحجز </a>
</div>
<section class="w3l-index3" id="about1">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-6 mb-lg-0 mb-md-5 mb-4 text-center">
                    <div class="header-title">

                        <h3 class="hny-title text-center">@Html.DisplayFor(model => model.R_Name)</h3>
                        <br />
                    </div>



                    <div class="fa fa-users " style="text-align:center">.  تتسع   </div>  <div>@Html.DisplayFor(model => model.R_Breadth)</div>
                    <hr />
                    <div class="fa fa-bed" style="text-align:center">.  عدد السرائر  </div>  <div>@Html.DisplayFor(model => model.Number_Of_Beds)</div>
                    <hr />
                    <div class="fa fa-money" style="text-align:center">.  سعر الليلة  </div>  <div>@Html.DisplayFor(model => model.R_Price)</div>
                    <hr />

                </div>
                <div class="col-lg-6 pl-lg-5 ">
                    <div class="header-title">

                        <h3 class="hny-title text-center">الوصف</h3>
                        <br />
                    </div>

                    <p class="mt-3 text-center">
                        @Html.DisplayFor(model => model.R_Description)
                    </p>

                </div>
            </div>
        </div>
    </div>
</section>


