<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Content/booking/js/jquery-2.1.4.min.js"></script>
    <link href="~/Content/booking/css/style.css" rel="stylesheet" />
    <link href="~/Content/booking/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>



    <section class="booking-agile">
        <h1>Majestic hotel booking form</h1>
        <div class="headbooking-agile">
            <div class="bookingleft-agile">
                <h2>make a reservation</h2>
                <form action="#" method="get">
                    <div class="arrival-agile">
                        <p>check-in date</p>
                        <input placeholder="Check in" class="date" id="datepicker" type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" required="" />
                    </div>
                    <div class="departure-agile">
                        <p>check-out date</p>
                        <input placeholder="Check out" class="date" id="datepicker1" type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" required="" />
                    </div>
                    <div class="clear"></div>
                    <div class="guest-agile">
                        <p>guest</p>
                        <select>
                            <option value="">2</option>
                            <option value="number">2+1</option>
                            <option value="number">3+1</option>
                            <option value="number">3</option>
                        </select>
                    </div>
                    <div class="room-agile">
                        <p>rooms</p>
                        <select>
                            <option value="">room</option>
                            <option value="single">single</option>
                            <option value="double">double</option>
                            <option value="suite">suite</option>
                        </select>
                    </div>
                    <div class="clear"></div>
                    <div class="room-agile">
                        <p>room preference</p>
                        <select>
                            <option value="">tv</option>
                            <option value="internet">wi-fi</option>
                            <option value="air">a/c</option>
                            <option value="extra">extra</option>
                        </select>
                    </div>
                    <div class="room-agile">
                        <p>no of children</p>
                        <select>
                            <option value="">0</option>
                            <option value="child">1</option>
                            <option value="child">2</option>
                            <option value="child">3</option>
                        </select>
                    </div>
                    <div class="clear"></div>
                    <div class="name-agile">
                        <p>First name</p>
                        <input type="text" name="uname" placeholder="first name">
                    </div>
                    <div class="last-agile">
                        <p>last name	</p>
                        <input type="text" name="lname" placeholder="last name">
                    </div>
                    <div class="clear"></div>
                    <div class="submit-agile">
                        <input type="submit" value="check availability">
                    </div>
                    <div class="clear"></div>
                </form>
            </div>
            <div class="bookingright-agile">
                <h3>get in touch</h3>
                <div class="mobile-agile">
                    <div class="icon-agile">
                        <span><i class="fa fa-phone" aria-hidden="true"></i></span>
                    </div>
                    <div class="contact-agile">
                        <p>phone</p>
                        <span>+1800-987456321</span>
                    </div>
                </div>
                <div class="clear"></div>
                <div class="email-agile">
                    <div class="mail-agile">
                        <span><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                    </div>
                    <div class="address-agile">
                        <p>email</p>
                        <span><a href="mailto:support@example.com">support@example.com</a></span>
                    </div>
                    <div class="clear"></div>
                    <div class="offers-agile">
                        <h4>city break</h4>
                        <ul class="offers">
                            <li><a href="#">hotel: las vegas,classic room,1 single bed</a></li>
                            <li><a href="#">checkin: sunday 12 june 2016 from 15:00</a></li>
                            <li><a href="#">checkout: monday 13 june 2016 from 12:00</a></li>
                        </ul>
                        <span> 1500 / 2days</span>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <footer>&copy; 2017 majestic hotel booking form.All Rights Reserved.Designed by <a href="http://www.w3layouts.com" target="blank">w3layouts</a></footer>
    </section>
    <div>
        @RenderBody()
    </div>


    <!--start-date-piker-->
    <link href="~/Content/booking/css/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/booking/js/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker,#datepicker1").datepicker();
        });
    </script>
    <!-- /End-date-piker -->
</body>
</html>
